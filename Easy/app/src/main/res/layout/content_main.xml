<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="56dp"
    tools:showIn="@layout/activity_main">

    <EditText
        android:id="@+id/txtClientPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_top_phone"
        android:hint="@string/content_your_phone"
        android:inputType="phone"
        android:textColor="#FDF5F0F0"
        android:textColorHint="#FDF5F0F0"
        app:cornerRadius="66dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnPhoto"
        android:layout_width="202dp"
        android:layout_height="116dp"
        android:layout_marginTop="@dimen/button_top_main_photo"
        android:onClick="onClickPhoto"
        android:text="@string/content_make_main"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assure_end" />

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/content_i_agree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/dealer_code"
        android:layout_width="107dp"
        android:layout_height="49dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="@dimen/content_top_dealer_code"
        android:hint="Код дилера"
        android:inputType="number"
        android:textColor="#FDF5F0F0"
        android:textColorHint="#FDF5F0F0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtClientPhone" />

    <Button
        android:id="@+id/assure_end"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/button_top_expire_date"
        android:onClick="onClickDate"
        android:text="Окончание пред.страховки"
        android:textColor="#FDF5F0F0"
        android:textColorHint="#FDF5F0F0"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtClientPhone" />

    <TextView
        android:id="@+id/txt_assure_end"
        android:layout_width="108dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/content_top_expire_date"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:hint="дата  "
        android:textColor="#FDF5F0F0"
        android:textColorHint="#FDF5F0F0"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtClientPhone" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/content_textview_width"
        android:layout_height="@dimen/content_textview_height"
        android:layout_marginTop="20dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="20dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        android:text="@string/content_text_agreement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>