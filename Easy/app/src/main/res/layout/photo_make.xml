<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    tools:context=".MakePhoto"
    android:layout_height="match_parent"
    tools:showIn="@layout/photo_make">

    <Button
        android:id="@+id/btnPhotoDoc1"
        android:layout_width="274dp"
        android:layout_height="105dp"
        android:layout_marginTop="84dp"
        android:onClick="onClickPhotoDoc"
        android:text="Фото ВУ 1сторона + Фото ТС 1сторона"
        app:cornerRadius="66dp"
        app:backgroundTint="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPhotoDoc2"
        android:layout_width="274dp"
        android:layout_height="105dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="84dp"
        android:onClick="onClickPhotoDoc"
        android:text="Фото ВУ 2сторона + Фото ТС 2сторона"
        app:cornerRadius="66dp"
        app:backgroundTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPhotoDoc1" />

    <Button
        android:id="@+id/btnPhotoDoc3"
        android:layout_width="274dp"
        android:layout_height="105dp"
        android:layout_marginTop="92dp"
        android:onClick="onClickPhotoDoc"
        android:text="Фото Паспорт"
        app:cornerRadius="66dp"
        app:backgroundTint="#FF9800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.656"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPhotoDoc2" />
</androidx.constraintlayout.widget.ConstraintLayout>
