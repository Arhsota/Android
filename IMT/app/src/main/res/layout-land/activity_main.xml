<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="73dp">
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:text="@string/result_text_before"
        android:textColor="@color/colorHelloText"
        android:textSize="@dimen/hello_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="117dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorWeightBackground"
        android:hint="@string/hint_txt_weight"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_out" />

    <EditText
        android:id="@+id/length"
        android:layout_width="117dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorWeightBackground"
        android:hint="@string/hint_txt_length"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/weight"
        app:layout_constraintTop_toBottomOf="@+id/result_out" />

    <EditText
        android:id="@+id/age"
        android:layout_width="118dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorWeightBackground"
        android:hint="@string/hint_txt_age"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/length"
        app:layout_constraintTop_toBottomOf="@+id/result_out" />


    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        ads:adSize="LARGE_BANNER"
        ads:adUnitId="ca-app-pub-7279174300665421/8731793267"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent">

    </com.google.android.gms.ads.AdView>

    <TextView
        android:id="@+id/text_table8"
        android:layout_width="wrap_content"
        android:layout_height="18dp"

        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/text_table8"
        android:textColor="@color/color_text_Table1"
        android:textSize="@dimen/text_table_size"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/text_table6" />

    <TextView
        android:id="@+id/text_table6"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/text_table6"
        android:textColor="@color/color_text_Table1"
        android:textSize="@dimen/text_table_size"
        app:layout_constraintBottom_toTopOf="@+id/text_table8"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_table4"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/text_table4"
        android:textColor="@color/color_text_Table1"
        android:textSize="@dimen/text_table_size"
        app:layout_constraintBottom_toTopOf="@+id/text_table6"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_table7"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/text_table7"
        android:textColor="@color/color_text_Table1"
        android:textSize="@dimen/text_table_size"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_table5"
        android:layout_width="wrap_content"
        android:layout_height="19dp"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/text_table5"
        android:textColor="@color/color_text_Table1"
        android:textSize="@dimen/text_table_size"
        app:layout_constraintBottom_toTopOf="@+id/text_table7"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_table3"
        android:layout_width="wrap_content"
        android:layout_height="19dp"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/text_table3"
        android:textColor="@color/color_text_Table1"
        android:textSize="@dimen/text_table_size"
        app:layout_constraintBottom_toTopOf="@+id/text_table5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_table1"
        android:layout_width="270dp"
        android:layout_height="25dp"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/text_table1"
        android:textColor="@color/color_text_Table1"
        app:layout_constraintBottom_toTopOf="@+id/text_table3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_table_age" />

    <TextView
        android:id="@+id/text_table_age"
        android:layout_width="119dp"
        android:layout_height="30dp"

        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/name_text_table_detail_age_before"
        android:textColor="@color/color_text_Table1"
        app:layout_constraintStart_toEndOf="@+id/text_table_weight"
        app:layout_constraintTop_toBottomOf="@+id/calculate_btn" />

    <TextView
        android:id="@+id/text_table_length"
        android:layout_width="118dp"
        android:layout_height="30dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/name_text_table_detail_length_before"
        android:textColor="@color/color_text_Table1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_table_age"
        app:layout_constraintTop_toBottomOf="@+id/calculate_btn" />

    <TextView
        android:id="@+id/text_table_weight"
        android:layout_width="108dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/name_text_table_detail_weight_before"
        android:textColor="@color/color_text_Table1"
        android:textSize="@dimen/text_table_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculate_btn" />

    <Button
        android:id="@+id/calculate_btn"
        android:layout_width="166dp"
        android:layout_height="94dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:enabled="false"
        android:text="@string/butt_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/age"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>

