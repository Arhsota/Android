<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:adjustViewBounds="true"
    android:divider="@drawable/separator"
    android:dividerPadding="3dp"
    android:showDividers="middle" >
    tools:context="com.arhsota.android.imt.MainActivity">

    <TextView
        android:id="@+id/result_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:text="@string/result_text"
        android:textColor="@color/colorHelloText"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/hello_text_size"/>

    <EditText
        android:id="@+id/weight"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorWeightBackground"
        android:hint="@string/hint_txt_weight"
        android:inputType="numberDecimal"
        android:scrollIndicators="bottom" />

    <EditText
        android:id="@+id/length"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWeightBackground"
        android:hint="@string/hint_txt_length"
        android:layout_marginTop="8dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/age"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWeightBackground"
        android:hint="@string/hint_txt_age"
        android:layout_marginTop="8dp"
        android:inputType="number" />

    <Button
        android:id="@+id/calculate_btn"
        android:layout_marginTop="8dp"
        android:layout_width="324dp"
        android:layout_height="71dp"
        android:enabled="false"
        android:text="@string/butt_name"/>

    <TextView
        android:id="@+id/text_table_weight"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/name_text_table_datail_weight"
        android:textColor="@color/color_text_Table1" />

    <TextView
        android:id="@+id/text_table_length"
        android:layout_width="270dp"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/name_text_table_datail_length"
        android:textColor="@color/color_text_Table1" />

    <TextView
        android:id="@+id/text_table_age"
        android:layout_width="270dp"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/name_text_table_datail_age"
        android:textColor="@color/color_text_Table1" />



    <TextView
        android:id="@+id/text_table1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:text="@string/text_table1"
        android:background="@android:color/transparent"
        android:textColor="@color/color_text_Table1" />


    <TextView
        android:id="@+id/text_table3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/text_table3"
        android:textColor="@color/color_text_Table1" />

    <TextView
        android:id="@+id/text_table4"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/text_table4"
        android:textColor="@color/color_text_Table1" />

    <TextView
        android:id="@+id/text_table5"
        android:layout_width="270dp"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/text_table5"
        android:textColor="@color/color_text_Table1" />

    <TextView
        android:id="@+id/text_table6"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/text_table6"
        android:textColor="@color/color_text_Table1" />

    <TextView
        android:id="@+id/text_table7"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/text_table7"
        android:textColor="@color/color_text_Table1" />

    <TextView
        android:id="@+id/text_table8"
        android:layout_width="270dp"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/text_table8"
        android:textColor="@color/color_text_Table1" />


    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">

    </com.google.android.gms.ads.AdView>



</LinearLayout>

