<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View
        android:id="@+id/red_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ff0000"
        android:textSize="20sp" />

    <View
        android:id="@+id/green_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/red_view"
        android:layout_toRightOf="@id/red_view"
        android:background="#00ff00"
        android:textSize="20sp" />

    <View
        android:id="@+id/blue_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/green_view"
        android:layout_toRightOf="@id/green_view"
        android:background="#0000ff"
        android:textSize="20sp" />

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/blue_view"
        android:layout_toRightOf="@id/blue_view"
        android:background="#000"
        android:textSize="20sp" />

</RelativeLayout>