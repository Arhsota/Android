<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnPhotoDoc1"
        android:layout_width="274dp"
        android:layout_height="105dp"
        android:layout_marginTop="84dp"
        android:onClick="onClickPhotoDoc"
        android:text="Фото права"
        app:backgroundTint="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPhotoDoc2"
        android:layout_width="282dp"
        android:layout_height="109dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="72dp"
        android:onClick="onClickPhotoDoc"
        android:text="Фото Свидетельства 1"
        app:backgroundTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPhotoDoc1" />

    <Button
        android:id="@+id/btnPhotoDoc3"
        android:layout_width="284dp"
        android:layout_height="105dp"
        android:layout_marginTop="104dp"
        android:onClick="onClickPhotoDoc"
        android:text="Фото Свидетельства 2"
        app:backgroundTint="#FF9800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.598"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPhotoDoc2" />
</androidx.constraintlayout.widget.ConstraintLayout>
